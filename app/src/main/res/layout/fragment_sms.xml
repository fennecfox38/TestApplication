<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".SMSFragment">
    <EditText
        android:id="@+id/edittxt_recipient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Recipient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollview_chatlog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
        android:id="@+id/scrollview_chatlog"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/edittxt_recipient"
        app:layout_constraintBottom_toTopOf="@+id/edittxt_smsbody"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </ScrollView>
    <EditText
        android:id="@+id/edittxt_smsbody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/smsbody"
        app:layout_constraintTop_toBottomOf="@+id/scrollview_chatlog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_send"/>
    <ImageButton
        android:id="@+id/btn_send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_circle_accent"
        android:src="@drawable/ic_send"
        app:layout_constraintTop_toTopOf="@+id/edittxt_smsbody"
        app:layout_constraintBottom_toBottomOf="@+id/edittxt_smsbody"
        app:layout_constraintStart_toEndOf="@+id/edittxt_smsbody"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/txt_number_of_letter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 70"
        app:layout_constraintBottom_toTopOf="@+id/btn_send"
        app:layout_constraintStart_toStartOf="@+id/btn_send"
        app:layout_constraintEnd_toEndOf="@+id/btn_send"/>
</androidx.constraintlayout.widget.ConstraintLayout>